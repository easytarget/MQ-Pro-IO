	pinctrl-0 = <&i2c2_pc0_pins>;  // can conflict uart2
	pinctrl-names = "default";
	status = "okay";
};

&i2c3 {
	pinctrl-0 = <&i2c3_pe16_pins>;
	pinctrl-names = "default";
	status = "okay";
